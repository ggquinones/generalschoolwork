import java.io.File;
import java.io.FileNotFoundException;
import java.io.FileWriter;
import java.io.IOException;
import java.io.PrintWriter;
import java.text.DecimalFormat;
import java.text.NumberFormat;
import java.util.Random;
import java.util.Scanner;

import javax.swing.JOptionPane;


public class Application {


public static void main(String []args) throws FileNotFoundException
{
    String[] names = {"Josh ", "Daniel ", "Luke ", "Jared ", "Peter ", "Joe ", "Kiljan ", "Stone ", "Logan ", "Drew "};
    ArrayPractice arrays = new ArrayPractice(10, names);
    int[] numbers = arrays.getNumbers();
    System.out.println("Here are the random numbers:");
    for(int i = 0; i < numbers.length; i++){
        System.out.print("\t" + numbers[i]);
    }
    Rectangle[] rectangles = arrays.getRectangle();
    System.out.println("\nHere are the random rectanle data of length and width:");
    for (int i = 0; i < rectangles.length; i++){
        System.out.println("\t" + String.format("%.4f", rectangles[i].getLength()) + ", " + String.format("%.4f", rectangles[i].getWidth()));
    }
    System.out.println("Here are your friends:");
    for(int i = 0; i<names.length; i++){
        System.out.print(names[i]);
    }

    
		       
		       
}

}


	
